<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorsが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title,  autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputName">Opinion</label>
  <%= f.text_field :body,  autofocus: true, id:"inputName", placeholder:"感想"%>
  <%= f.submit 'Update Book', class:"btn btn-success" %>

  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>
  
  <%= link_to 'Show', book_path %>
  |
  <%= link_to 'Back', books_path %>
<% end %>

