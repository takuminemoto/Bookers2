<p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
       <%= render 'books/list', book: @book, user: @user %>
      </div>


      <div class="col-md-8 offset-md-1" style="background-color: white;">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <tr>
              <th= colspan ="3"></th>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          <% @books.each do |book| %>
              <tr>
                <th>
                  <%= link_to image_tag("no_image.jpg", class: "image"), user_path(@user.id) %>
                </th>
                <th><%= link_to book.title,book_path(current_user.id) %></th>
                <th><%= book.body %></th>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>




